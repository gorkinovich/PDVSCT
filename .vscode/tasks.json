{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PlayDate: Make And Run Game",
            "type": "shell",
            "command": "${workspaceFolder}/makeandrun.bat",
            "args": [
                "'${workspaceFolderBasename}'"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "PlayDate: Make Game",
            "type": "shell",
            "command": "${workspaceFolder}/make.bat",
            "args": [
                "'${workspaceFolderBasename}'"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "PlayDate: Run Game",
            "type": "shell",
            "command": "${workspaceFolder}/run.bat",
            "args": [
                "'${workspaceFolderBasename}'"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}